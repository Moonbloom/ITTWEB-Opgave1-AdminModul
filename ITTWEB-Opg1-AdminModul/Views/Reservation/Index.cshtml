@using ITTWEB_Opg1_AdminModul.Models
@model List<ITTWEB_Opg1_AdminModul.Models.LoanInformation>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Reservationer";
}

<div>
    <h2>Reservationer</h2>
</div>

<div class="add-wrapper">
    <p>
        <a href="https://www.google.com/search?q=tilf%C3%B8j&ie=utf-8&oe=utf-8">Add</a>
    </p>
</div>


<div class="div-table">
    <table class="table">
        <thead>
            <tr>
                <th>Komponent</th>
                <th>Stud ID</th>
                <th>Stud Navn</th>
                <th>Udlåns dato</th>
                <th>Email</th>

            </tr>

        </thead>
        <tbody>

            @{
                foreach (var reservartion in Model)
                {
                    <tr>
                        <td>@reservartion.Component.ComponentType.ComponentName</td>
                        <td>@reservartion.Student.StudentId</td>
                        <td>@reservartion.Student.StudentName</td>
                        <td>@reservartion.ReservationDate</td>
                    <td>
                        <p>
                            <a class="@(reservartion.IsEmailSend ? "email-is-send" : "email-is-not-send")" href="https://www.youtube.com/watch?v=nXRRmbJ7aBI">Send Email</a>
                        </p>

                    </td>
                    <td><a class="component-edit" href="https://www.google.com/search?q=edit&ie=utf-8&oe=utf-8">Edit</a></td>
                    <td><a class="component-remove" href="https://www.google.com/search?q=edit&ie=utf-8&oe=utf-8#q=remove">Remove</a></td>
                </tr>
                }
            }
        </tbody>

    </table>
</div>