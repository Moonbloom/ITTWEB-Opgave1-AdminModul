@using ITTWEB_Opg1_AdminModul.Models
@model List<ITTWEB_Opg1_AdminModul.Models.LoanInformation>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Udlån";
}

<div >
    <h2>Udlån</h2>
</div>

<div class="add-wrapper">
    <p>
        <a href="https://www.google.com/search?q=tilf%C3%B8j&ie=utf-8&oe=utf-8">Add</a>
    </p>
</div>

<div class="div-table">
    <table class="table">
        <thead>
            <tr>
                <th>Komponent</th>
                <th>Stud ID</th>
                <th>Stud Navn</th>
                <th>Udlåns dato</th>
                <th>Indleverings dato</th>
                <th>Email</th>

            </tr>

        </thead>
        <tbody>

            @{
                foreach (var loan in Model)
                {
                    <tr>
                        <td>@loan.Component.ComponentType.ComponentName</td>
                        <td>@loan.Student.StudentId</td>
                        <td>@loan.Student.StudentName</td>
                        <td>@loan.LoanDate</td>
                        <td>@loan.ReturnDate</td>
                        <td>
                            <p>
                                <a class="@(loan.IsEmailSend ? "email-is-send" : "email-is-not-send")" href="https://www.youtube.com/watch?v=nXRRmbJ7aBI">Send Email</a>
                            </p>

                        </td>
                        <td><a class="component-edit" href="https://www.google.com/search?q=edit&ie=utf-8&oe=utf-8">Edit</a></td>
                        <td><a class="component-remove" href="https://www.google.com/search?q=edit&ie=utf-8&oe=utf-8#q=remove">Remove</a></td>
                    </tr>
                }
            }
        </tbody>

    </table>
</div>